<%= render "shared/pay_infos/form_before" %>
<%= semantic_form_for resource ,:remote => true,:html => {:id => "#{resource_class.name.underscore}_form"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.input :bill_date,:label => "提款日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true} %>
    <%= f.input :org_id,:label =>"分理处/分公司" ,:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:class => "select_org",:id => "from_org_id"} %>
    <%= f.input :customer_name,:label => "姓名" %>
    <%= f.input :id_number,:label => "身份证号" %>
    <%= f.input :note,:as => :string,:input_html => {:size => 60} %>
  <% end %>
<% end%>
