<!--动态toolbar-->
<div class="secondary-navigation">
  <ul class="wat-cf">
    <%if can? :read,resource_class%>
      <li class="first">
        <%= link_to image_tag("grid.png") , collection_path,:title => "#{resource_class.model_name.human}列表",:class => "tipsy"  %>
      </li>
      <%if self.respond_to?("search_#{controller_name.tableize}_path")%>
        <li><%= link_to image_tag("application-search-result.png"),self.send("search_#{controller_name.tableize}_path"),:title => "查询#{resource_class.model_name.human}",:class => "fancybox tipsy" %></li>
      <%end%>
    <%end%>
    <%if params[:action] == "edit"%>
      <li>
        <%= link_to_function image_tag("disk-black.png"), "$('##{resource_class.model_name.underscore}_form').trigger('submit')",:title => "保存#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>
    <%if params[:action] == "show"%>
      <%if can? :update,resource%>
        <li>
          <%= link_to image_tag("application--pencil.png"),  edit_resource_path(resource),:title => "录入汇款记录",:class => "tipsy" %>
        </li>
      <%end%>
    <%end%>
  </ul>
</div>   
