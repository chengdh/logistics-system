<%= semantic_form_for resource ,:remote => true,:html => {:id => "goods_exception_form"} do |f|%>
  <%=f.error_messages %>
  <%=f.semantic_fields_for :claim do |claim|%>
    <%= claim.inputs "理赔信息" do%>
      <%= claim.input :bill_date,:as => :string,:input_html => {:size => 10,:readonly => true,:class => 'datepicker'} %>
      <%= claim.input :act_compensate_fee %>
      <%= claim.input :note ,:as => :string,:input_html => {:size => 100} %>
    <%end%>
  <%end%>
<% end%>
